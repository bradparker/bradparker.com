#!/usr/bin/env bash

set -exuo pipefail

(
  cd $(dirname $BASH_SOURCE)/..
  rsync -va --no-owner --no-group --exclude dist-* --exclude .direnv --exclude .overmind.sock bradparker.com/ "$1":bradparker.com
  ssh -t "$1" "sudo bash -c 'rsync -va --no-owner --no-group bradparker.com/ / && nixos-rebuild switch'"
)
