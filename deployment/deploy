#!/usr/bin/env nix-shell
#!nix-shell -i bash -p bash nixos-rebuild

set -exuo pipefail

target_host="$1"

(
  cd "$(dirname "${BASH_SOURCE[0]}")/.."
  rsync -va --no-owner --no-group --mkpath bradparker.com/var/secrets/bradparker.com "$target_host":/var/secrets/
  nixos-rebuild -I nixos-config=bradparker.com/etc/nixos/configuration.nix --target-host "$target_host" --use-remote-sudo switch
)
